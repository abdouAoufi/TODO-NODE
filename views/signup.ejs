<!DOCTYPE html>
<html lang="en">
  <%- include("./includes/head.ejs") %>
</head> 
  <body>
   <%- include("./includes/navbar.ejs") %>

   <section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center mt-4">
				<div class="col-md-6 text-center mb-1">
					<h2 class="heading-section">Sign Up </h2>
				</div>
			</div>
			<% if (errorMessage) { %>
				<div class="text-center text-danger"><%= errorMessage %> </div>
			<% } %>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5 ">
					<div class="login-wrap p-2 p-md-5">
		      	<div class="icon d-flex align-items-center justify-content-center">
		      		<span class="fa fa-user-o"></span>
		      	</div>
					<!-- ! MY FORM -->
					<form action="/signup" class="login-form" method="POST">
		      		<div class="form-group">
		      			<input type="text" name="name" class="form-control rounded-left my-2" placeholder="Name" required>
		      		</div>

              		<div class="form-group">
		      			<input type="text" name="email" class="form-control rounded-left my-2" placeholder="Email" required>
		      		</div>

	            	<div class="form-group d-flex">
	              	   <input type="password" name="password" class="form-control rounded-left my-2" placeholder="Password" required>
	            	</div>
						<input type="hidden" name="_csrf"  value=<%= csrfToken %> />
	           		 <div class="form-group mt-4 text-center">
	            		<button type="button|submit" class="btn btn-dark ">Sign up</button>
	            	</div>
	          </form>

				 <div class="form-group mt-4 text-center">
					<a href="/login" class="link-dark"> <p>have an account ?</p>  </a>
				</div>
	          </div>
				</div>
			</div>
		</div>
	</section> 
   <%- include("./includes/js-boot.ejs") %> 
  </body>
</html>

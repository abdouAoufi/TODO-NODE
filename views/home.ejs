<!DOCTYPE html>
<html lang="en">
  <%- include("./includes/head.ejs") %>
  <link rel="stylesheet" href="style/home.css">
</head> 
  <body>
   <%- include("./includes/navbar.ejs") %> 

   <main>
     <div class="hero">
      <% if (user) { %>
        <div class="card" >
          <div class="card-body">
            <h5 class="card-title"> Name : <%= user.name %> </h5>
            <h6 class="card-subtitle mb-2 text-muted"> Email : <%= user.email %> </h6>
          </div>
        </div>
      <% } %>
     </div> 




     <div class="notes">
       <div class="container">
         <h3 class="my-3 text-primary">My notes :</h3>
         <div class="row">
           <% if (notes) { %>
            <% notes.forEach(element => { %>
              <div class="col">
                <div class="card border-black mb-3 " style="max-width: 18rem; height: 8rem;">
                  <div class="card-header"><%= element.title %> </div>
                  <div class="card-body text-dark">
                    <h5 class="card-title"><%= element.category %></h5>
                    <p class="card-text"><%= element.content %> </p>
                  </div>
                </div>
              </div>
            <% }) %>
           <% } %>
         </div>
      </div>
     </div>
   </main>

   <div class="btn-containter">
     <a href="/create-note/<%= user.id %> "><button class="btn btn-dark">Create Note</button></a>
   </div>
  
    <% if (!user) { %>
     <script> window.location = "/login"; </script>
    <% } %>
   <%- include("./includes/js-boot.ejs") %> 
  </body>
</html>
